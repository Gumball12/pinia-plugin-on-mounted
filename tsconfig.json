{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "lib": ["ESNext"],
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true
  },
  "include": ["src", "__tests__"],
  "exclude": ["node_modules", "dist"]
}
